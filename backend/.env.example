# Database Configuration
DB_HOST=localhost
DB_USER=root
DB_PASSWORD=your_password
DB_NAME=social_library

# JWT Secret
JWT_SECRET=your_jwt_secret_key_here

# API Keys
TMDB_API_KEY=your_tmdb_api_key_here
GOOGLE_BOOKS_API_KEY=your_google_books_api_key_here

# Server Configuration
PORT=4000

# Book Genre Sync (false = sadece seed kullan, true = Google Books API'den çek)
# ÖNEMLİ: Google Books API rate limit nedeniyle false önerilir
# Seed kullanmak için: node src/seeds/bookSeed.js
ENABLE_BOOK_GENRE_SYNC=false

# Email Configuration (Şifre sıfırlama için)
# Gmail kullanıyorsanız: https://myaccount.google.com/apppasswords adresinden uygulama şifresi oluşturun
GMAIL_USER=your_email@gmail.com
GMAIL_PASS=your_app_password_here
